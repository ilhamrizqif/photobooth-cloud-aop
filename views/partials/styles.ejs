 @font-face {
            font-family: 'NormsProRegular';
            src: url('/assets/fonts/normsproregular.TTF') format('truetype');
            font-weight: normal;
            font-style: normal;
        }

        html {
            font-size: 24px;
        }

        body {
            font-family: 'NormsProRegular', Arial, sans-serif;
            margin: 0;
            padding: 50px;
            display: flex;
            align-items: center;    
            justify-content: center; /* This handles HORIZONTAL centering */
            box-sizing: border-box;
            background-color: #E9EBF0;
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
            margin-left: 280px; /* Removed margin-left */
        }

        body::before,
        body::after {
            content: '';
            position: absolute;
            left: 50%;
            width: 180%;
            height: 35%;
            z-index: -1;
            transform: translateX(-50%);
        }

        body::before {
            top: -15%;
            border-bottom-left-radius: 100%;
            border-bottom-right-radius: 100%;
            background-image:
                radial-gradient(circle at 80% 40%, #5AF0E8 0%, rgba(90, 240, 232, 0) 40%),
                linear-gradient(135deg, #069E96, #0055B3);
        }

        body::after {
            bottom: -15%;
            border-top-left-radius: 100%;
            border-top-right-radius: 100%;
            background-image:
                radial-gradient(circle at 20% 60%, #00D4FF 0%, rgba(0, 212, 255, 0) 40%),
                linear-gradient(315deg, #003A7C, #0055B3);
        }

        .container {
            background: white;
            padding: 4rem;
            border-radius: 20px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 1200px;
            /* margin-left and margin-right have been removed from here */
        }

        img {
            max-width: 100%;
            height: auto;
            border-radius: 12px;
            margin-bottom: 1rem;
        }

        p {
            font-size: 2.2rem;
            margin-bottom: 2rem;
        }

        button {
            padding: 0.5rem 1rem;
            font-size: 2rem;
            background: linear-gradient(to right, #0a1b50, #1b97c1);
            color: white;
            border: none;
            border-radius: 1.5rem;
            padding: 30px 40px;
            cursor: pointer;
        }

        a {
            text-decoration: none;
        }

        .back-link {
            display: block;
            margin-top: 3rem;
            color: #333;
            font-size: 1.9rem;
        }

        /* Responsive scaling */
        @media (max-width: 480px) {
            html {
                font-size: 28px;
            }

            .container {
                padding: 3rem;
            }

            button {
                font-size: 1.8rem;
            }
        }